{% set url = path('ads_show', {'slug':ad.slug}) %}
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header text-center">
                {{ad.car}}<strong>{{ad.price}}€</strong>
            </div>
            <a href="{{url}}">
                <img src="{{ad.coverImage}}" alt="image du véhicule {{ad.title}}" class="starsimg">
            </a>
            <div class="card-body">
                <h4 class="card-title">{{ad.title}}</h4>
                <p class="card-text">{{ad.introduction}}</p>
                <a href="{{url}}" class="btn btn-secondary">En savoir plus</a>
            </div>
        </div>
    </div>